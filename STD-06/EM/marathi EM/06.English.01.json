    { "प्रश्न_आयडी": 6, "प्रश्न": "भारतभूच्या रक्षणासाठी आपण काय करण्यास तयार आहोत?", "उत्तर": "भारतभूच्या रक्षणासाठी आपण आपले प्राण पणाला लावण्यास तयार आहोत." },
    { "प्रश्न_आयडी": 7, "प्रश्न": "कवयित्रीने मातीला 'पवित्र' का म्हटले आहे?", "उत्तर": "कारण ही आपल्या मातृभूमीची माती आहे आणि ती आपल्याला स्वर्गापेक्षाही प्रिय आहे." },
    { "प्रश्न_आयडी": 8, "प्रश्न": "देशहितासाठी कोणता मंत्र जपावा असे कवयित्री म्हणते?", "उत्तर": "देशाचे कल्याण करणे आणि प्रगती करणे हा देशहिताचा मंत्र जपावा." },
    { "प्रश्न_आयडी": 9, "प्रश्न": "नव्या युगाचे गाणे कसे गायचे आहे?", "उत्तर": "नव्या युगाचे गाणे सर्वांनी मिळून एक दिलाने गायचे आहे." },
    { "प्रश्न_आयडी": 10, "प्रश्न": "कवितेतून कोणता मुख्य संदेश मिळतो?", "उत्तर": "कवितेतून विज्ञाननिष्ठा, मानवता आणि प्रखर राष्ट्रभक्तीचा संदेश मिळतो." },
    { "प्रश्न_आयडी": 11, "प्रश्न": "'मानवतेचा दीप' म्हणजे काय?", "उत्तर": "मानवतेचा दीप म्हणजे माणसाने माणसाशी माणसाप्रमाणे वागण्याची भावना." },
    { "प्रश्न_आयडी": 12, "प्रश्न": "'तिमिर' म्हणजे काय?", "उत्तर": "तिमिर म्हणजे अंधार, जो इथे अज्ञानाचे प्रतीक आहे." },
    { "प्रश्न_आयडी": 13, "प्रश्न": "तारे होणे म्हणजे काय?", "उत्तर": "तारे होणे म्हणजे आपल्या कार्यातून आणि विज्ञानातून चमकणे किंवा प्रगती करणे." },
    { "प्रश्न_आयडी": 14, "प्रश्न": "एक दिलाने गाणे का महत्त्वाचे आहे?", "उत्तर": "कारण एकता असेल तरच आपण देशाचा विकास करू शकतो." },
    { "प्रश्न_आयडी": 15, "प्रश्न": "कवयित्रीने 'हातात हात गुंफणे' असे का म्हटले आहे?", "उत्तर": "एकता आणि सहकार्य दर्शवण्यासाठी कवयित्रीने हा शब्दप्रयोग केला आहे." },
    { "प्रश्न_आयडी": 16, "प्रश्न": "स्वर्गापेक्षा काय श्रेष्ठ आहे?", "उत्तर": "कवयित्रीच्या मते आपली भारतभूमी स्वर्गापेक्षाही श्रेष्ठ आहे." },
    { "प्रश्न_आयडी": 17, "प्रश्न": "ध्येयमंदिर म्हणजे काय?", "उत्तर": "ध्येयमंदिर म्हणजे आपण ठरवलेले उच्च ध्येय किंवा उद्दिष्ट." },
    { "प्रश्न_आयडी": 18, "प्रश्न": "विज्ञानाचे महत्त्व काय आहे?", "उत्तर": "विज्ञान अज्ञानाचा अंधार दूर करते आणि प्रगतीचा मार्ग दाखवते." },
    { "प्रश्न_आयडी": 19, "प्रश्न": "नव्या युगाचे गाणे कोणी गावे?", "उत्तर": "नव्या युगाचे गाणे देशातील सर्व नागरिकांनी आणि तरुणांनी गावे." },
    { "प्रश्न_आयडी": 20, "प्रश्न": "प्राण पणाला लावणे म्हणजे काय?", "उत्तर": "देशासाठी सर्वोच्च बलिदान देण्याची तयारी असणे." },
    { "प्रश्न_आयडी": 21, "प्रश्न": "कवितेतील 'सूर' कशाचे प्रतीक आहे?", "उत्तर": "सूर हे विचारांमधील एकतेचे प्रतीक आहे." },
    { "प्रश्न_आयडी": 22, "प्रश्न": "आपल्या देशात विविधता कोठे दिसते?", "उत्तर": "आपल्या देशात रंग, जाती, धर्म आणि भाषेत विविधता दिसते." },
    { "प्रश्न_आयडी": 23, "प्रश्न": "कवयित्रीने कोणाला वंदन केले असावे?", "उत्तर": "कवयित्रीने मातृभूमीला आणि विज्ञानाला वंदन केले आहे." },
    { "प्रश्न_आयडी": 24, "प्रश्न": "नव्या युगात आपण कशाचा त्याग केला पाहिजे?", "उत्तर": "नव्या युगात आपण अज्ञान आणि भेदाभेदाचा त्याग केला पाहिजे." },
    { "प्रश्न_आयडी": 25, "प्रश्न": "'तेजोमय सूर्य' म्हणजे काय?", "उत्तर": "तेजोमय सूर्य म्हणजे ज्ञानाचा प्रकाश." },
    { "प्रश्न_आयडी": 26, "प्रश्न": "कवितेची लय कशी आहे?", "उत्तर": "कवितेची लय उत्साहवर्धक आणि स्फूर्तिदायक आहे." },
    { "प्रश्न_आयडी": 27, "प्रश्न": "कोणत्या गोष्टीमुळे देशाची शान वाढेल?", "उत्तर": "एकता आणि विज्ञानातील प्रगतीमुळे देशाची शान वाढेल." },
    { "प्रश्न_आयडी": 28, "प्रश्न": "अंतरी दीप तेवणे म्हणजे काय?", "उत्तर": "मनात चांगले विचार सतत जागरूक ठेवणे." },
    { "प्रश्न_आयडी": 29, "प्रश्न": "नभोमंडळात चमकण्यासाठी काय करावे लागेल?", "उत्तर": "नभोमंडळात चमकण्यासाठी कठोर परिश्रम आणि ज्ञानाची साधना करावी लागेल." },
    { "प्रश्न_आयडी": 30, "प्रश्न": "कवयित्रीने तरुणांना काय आवाहन केले आहे?", "उत्तर": "एकत्र येऊन देशहितासाठी पुढे जाण्याचे आवाहन केले आहे." },
    { "प्रश्न_आयडी": 31, "प्रश्न": "कवितेत कोणाचे नाव आले आहे?", "उत्तर": "कवितेत भारतभूचे नाव आले आहे." },
    { "प्रश्न_आयडी": 32, "प्रश्न": "एकत्वाचे गाणे म्हणजे काय?", "उत्तर": "भेदभाव विसरून सर्वांनी एकत्र राहणे." },
    { "प्रश्न_आयडी": 33, "प्रश्न": "कवयित्रीला कशाचा अभिमान आहे?", "उत्तर": "कवयित्रीला भारतभूमी आणि तिच्या पवित्र मातीचा अभिमान आहे." },
    { "प्रश्न_आयडी": 34, "प्रश्न": "कवितेतील शब्दांतून काय जाणवते?", "उत्तर": "शब्दांतून प्रखर राष्ट्रभक्ती आणि आत्मविश्वास जाणवतो." },
    { "प्रश्न_आयडी": 35, "प्रश्न": "नव्या युगाचे गाणे गायल्याने काय होईल?", "उत्तर": "समाजात उत्साह आणि एकात्मता निर्माण होईल." },
    { "प्रश्न_आयडी": 36, "प्रश्न": "हातात हात गुंफून पुढे जाण्याने काय साध्य होईल?", "उत्तर": "यामुळे कठीण ध्येयही सहज साध्य होईल." },
    { "प्रश्न_आयडी": 37, "प्रश्न": "पवित्र मातीचे रक्षण कोण करणार?", "उत्तर": "पवित्र मातीचे रक्षण आपण सर्व भारतवासीय करणार आहोत." },
    { "प्रश्न_आयडी": 38, "प्रश्न": "कवितेत विज्ञानाला काय म्हटले आहे?", "उत्तर": "विज्ञानाला 'नभोमंडळ' आणि 'तेजोमय सूर्य' असे संबोधले आहे." },
    { "प्रश्न_आयडी": 39, "प्रश्न": "मानवतेचा दीप का महत्त्वाचा आहे?", "उत्तर": "कारण माणुसकी असेल तरच जगात शांतता नांदू शकते." },
    { "प्रश्न_आयडी": 40, "प्रश्न": "कवितेचे नाव 'नव्या युगाचे गाणे' असे का दिले आहे?", "उत्तर": "कारण यात जुन्या रुढी सोडून आधुनिक विज्ञानाच्या काळात प्रगती करण्याची भाषा केली आहे." }
  ]
}